# ProofPals Backend Environment Configuration
# Copy this file to .env and modify as needed

# Application settings
APP_NAME=ProofPals Backend
VERSION=1.0.0
DEBUG=false

# Database settings
DATABASE_URL=sqlite:///./proofpals.db

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security settings
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
API_KEY_HEADER=X-API-Key

# CORS settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Rate limiting settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Token settings
TOKEN_EXPIRY_HOURS=24
MAX_TOKENS_PER_CREDENTIAL=10

# Voting settings
VOTE_THRESHOLD=3
URGENT_FLAG_LIMIT=5
FLAG_FRACTION=0.3

# Crypto settings
RSA_KEY_SIZE=2048
MAX_RING_SIZE=1000

# Monitoring settings
LOG_LEVEL=INFO
METRICS_RETENTION_DAYS=30

# Escalation settings
ESCALATION_TIMEOUT_HOURS=24
TRUSTEE_THRESHOLD=3
